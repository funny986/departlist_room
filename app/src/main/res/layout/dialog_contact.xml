<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal">

    <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
    android:gravity="center_horizontal">

        <TextView
                android:id="@+id/dialod_lastname_id"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textStyle="bold"
                android:textColor="@color/textFragment"
                  android:textSize="20dp"
                android:layout_marginTop="90dp"/>

        <TextView
                android:id="@+id/dialod_firstname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Contact Name"
                android:textColor="@color/textFragment"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
        <TextView
                android:id="@+id/dialod_middlename_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textFragment"
                android:textSize="20dp"
                android:layout_marginTop="5dp"/>
        <TextView
                android:id="@+id/dialod_positionname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textColor="@color/textFragment"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>


        <TextView
                android:id="@+id/dialog_phone_id"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:text="Phone Number"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

<LinearLayout android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

        <Button
                android:id="@+id/dialog_button_name"
                android:padding="20dp"
                android:textAlignment="center"
                android:drawablePadding="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round"
                android:text="Позвонить"
                android:textColor="@color/textAccent"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                  android:layout_gravity="start"/>
    <Button
            android:id="@+id/dialog_button_message"
            android:padding="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="15dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_message_black_24dp"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:text="СМС"
            android:textColor="@color/textAccent"
            android:layout_marginTop="10dp"
            android:layout_gravity="start"/>
</LinearLayout>

    </LinearLayout>

<ImageView
        android:id="@+id/dialog_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>