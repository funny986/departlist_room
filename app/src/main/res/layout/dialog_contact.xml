<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView
                android:id="@+id/dialod_lastname_id"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textStyle="bold"
                android:textColor="@color/textFragment"
                  android:textSize="20sp"
                android:layout_marginTop="45dp"/>

        <TextView
                android:id="@+id/dialod_firstname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textColor="@color/textFragment"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

        <TextView
                android:id="@+id/dialod_middlename_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textFragment"
                android:textSize="5sp"
              />

        <TextView
                android:id="@+id/dialod_positionname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textColor="@color/textFragment"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>


        <TextView
                android:id="@+id/dialog_phone_id"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:text="Phone Number"
                android:textColor="@color/design_default_color_primary"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

<LinearLayout android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

        <Button
                android:id="@+id/dialog_button_name"
                android:padding="8dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:layout_width="135dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_round"
                android:text="Позвонить"
                android:textColor="@color/textAccent"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                tools:ignore="SmallSp"/>
    <Button
            android:id="@+id/dialog_button_message"
            android:padding="10dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_message_black_24dp"
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_round"
            android:text="СМС"
            android:textColor="@color/textAccent"
            android:layout_marginTop="10dp"
            android:layout_gravity="start"
            tools:ignore="SmallSp"/>
</LinearLayout>

    </LinearLayout>

</RelativeLayout>

