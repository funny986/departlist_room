<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

        <TextView
                style="@style/Theme.CustomTheme.TextViewStyle"
                android:id="@+id/dialod_lastname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textStyle="bold"
                android:layout_marginTop="40dp"/>

        <TextView
                android:id="@+id/dialod_firstname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.CustomTheme.TextViewStyle"
                android:text="Contact Name"
                android:layout_marginTop="10dp"/>
        <TextView
                android:id="@+id/dialod_middlename_id"
                style="@style/Theme.CustomTheme.TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"/>
        <TextView
                android:id="@+id/dialod_positionname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textStyle="bold|italic"
                android:textColor="@color/colorDarkOrange"
                android:layout_marginTop="12dp"
                style="@style/Theme.CustomTheme.TextViewStyle"/>


        <TextView
                android:id="@+id/dialog_phone_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Phone Number"
                android:textColor="@color/design_default_color_primary_dark"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal">

            <Button
                    android:id="@+id/dialog_button_name"
                    android:padding="15dp"
                    android:textAlignment="center"
                    android:drawablePadding="8dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round"
                    android:text="Позвонить"
                    android:textColor="@color/textAccent"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="start"
                    tools:ignore="RtlCompat"/>
            <Button
                    android:id="@+id/dialog_button_message"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_message_black_24dp"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round"
                    android:text="СМС"
                    android:textColor="@color/textAccent"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="start"
                    tools:ignore="RtlCompat"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

