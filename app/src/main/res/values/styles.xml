<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightOrange</item>
        <item name="colorPrimaryDark">@color/colorDarkOrange</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:theme">@style/Theme.CustomTheme</item>

    </style>

<!--    Custom theme-->

    <style name="Theme.CustomTheme" parent="Theme.AppCompat.NoActionBar">
<!--        <item name="android:selectableItemBackground">@drawable/ic_back</item>-->
<!--        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>-->
        <item name="android:dropDownListViewStyle">@style/MyDropDownListView</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
<!--        <item name="actionBarStyle">@style/MyActionBar</item>-->
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

<!--    <style name="WidgetCustom" parent="Widget.MaterialComponents.ActionBar.Primary">-->
<!--        <item name="materialThemeOverlay">@style/Theme.Design.Light</item>-->
<!--    </style>-->

    <style name="MyDropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/btn_round</item>
   </style>

    <style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/btn_round</item>
    </style>

    <style name="MyActionBarTabStyle" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="android:background">@drawable/btn_round</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>

    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"
    />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"
    />
    <style name="MyAlertDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="CustomAlert" parent="Theme.AppCompat.Dialog.Alert">
        <item name="theme">@style/MyAlertDialogTheme</item>
        <item name="colorAccent">#201432</item>
        <item name="android:textColor">@color/textFragment</item>
<!--        <item name="backgroundColor">@color/backgroundfragment</item>-->
<!--        <item name="background">@color/backgroundfragment</item>-->
<!--       <item name="android:windowBackground">@drawable/btn_round</item>-->
        <item name="android:textSize">18dp</item>
        
<!--        <item name="android:fullDark">@color/backgroundfragment</item>-->
<!--        <item name="android:topDark">@color/backgroundButton</item>-->
<!--        <item name="android:centerDark">@color/colorPrimary</item>-->
<!--        <item name="android:bottomDark">@color/backgroundButton</item>-->
<!--        <item name="android:fullBright">...</item>-->
<!--        <item name="android:topBright">...</item>-->
<!--        <item name="android:centerBright">...</item>-->
<!--        <item name="android:bottomBright">...</item>-->
<!--        <item name="android:bottomMedium">...</item>-->
<!--        <item name="android:centerMedium">...</item>-->
    </style>


    <style name="title_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textAccent</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="number_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#231142</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:autoLink">phone</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="button_style">
        <item name="android:background">@drawable/btn_round</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textAccent</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
